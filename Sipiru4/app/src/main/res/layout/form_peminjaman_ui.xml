<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ScrollView01"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="wrap_content" android:gravity="center_horizontal"
        android:orientation="vertical" android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="com.c07ppl2015.sipiru.sipiru.LoginUI"
        android:background="#B1D9E7"
        android:id="@+id/layoutForm1">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="FORMULIR"
            android:textSize="24dp"
            android:textStyle="bold"
            android:id="@+id/formulirText"
            android:textColor="#ff000000"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="tanda * wajib diisi. Beberapa isian terisi otomatis"
            android:textSize="16dp"
            android:id="@+id/keterangan"
            android:layout_marginTop="4dp"
            android:textColor="@color/list_background_pressed"
            android:layout_below="@+id/formulirText"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Kode Ruangan"
            android:textSize="22dp"
            android:id="@+id/textView3"
            android:textColor="#ff000000"
            android:layout_marginTop="4dp"
            android:layout_below="@+id/keterangan"
            android:layout_alignRight="@+id/textView4"
            android:layout_alignEnd="@+id/textView4" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:id="@+id/ruang"
            android:hint="Kode ruangan"
            android:textSize="22dp"
            android:layout_gravity="center_vertical"
            android:textColor="#000"
            android:background="#D3F0D2"
            android:editable="false"
            android:layout_below="@+id/textView3"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nama Peminjam"
            android:textSize="22dp"
            android:id="@+id/textView2"
            android:textColor="#ff000000"
            android:layout_marginTop="4dp"
            android:layout_below="@+id/ruang"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:id="@+id/nama"
            android:layout_gravity="center_vertical"
            android:background="#D3F0D2"
            android:hint="Nama peminjam"
            android:textColor="#000"
            android:editable="false"
            android:textSize="22dp"
            android:layout_below="@+id/textView2"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Perihal*"
            android:textSize="22dp"
            android:id="@+id/textView4"
            android:textColor="#ff000000"
            android:layout_marginTop="4dp"
            android:layout_below="@+id/nama"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:id="@+id/perihal"
            android:layout_gravity="center_vertical"
            android:background="#D3F0D2"
            android:textColor="#000"
            android:textSize="22dp"
            android:hint="Perihal"
            android:layout_below="@+id/textView4"
            android:layout_alignLeft="@+id/nama"
            android:layout_alignStart="@+id/nama" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Kegiatan*"
            android:textSize="22dp"
            android:id="@+id/textView5"
            android:textColor="#ff000000"
            android:layout_marginTop="4dp"
            android:layout_below="@+id/perihal"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:id="@+id/kegiatan"
            android:layout_gravity="center_vertical"
            android:background="#D3F0D2"
            android:hint="Nama kegiatan atau acara"
            android:textSize="22dp"
            android:textColor="#000"
            android:layout_below="@+id/textView5"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Waktu Mulai"
            android:textSize="22dp"
            android:id="@+id/textView6"
            android:textColor="#ff000000"
            android:layout_marginTop="4dp"
            android:layout_below="@+id/kegiatan"
            android:layout_alignRight="@+id/textView4"
            android:layout_alignEnd="@+id/textView4" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:id="@+id/waktuMulai"
            android:layout_gravity="center_vertical"
            android:background="#D3F0D2"
            android:hint="Waktu Mulai"
            android:editable="false"
            android:textColor="#000"
            android:textSize="22dp"
            android:layout_below="@+id/textView6"
            android:layout_alignLeft="@+id/textView6"
            android:layout_alignStart="@+id/textView6" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Waktu Selesai"
            android:textSize="22dp"
            android:id="@+id/textView7"
            android:textColor="#ff000000"
            android:layout_marginTop="4dp"
            android:layout_below="@+id/waktuMulai"
            android:layout_alignLeft="@+id/waktuMulai"
            android:layout_alignStart="@+id/waktuMulai" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:id="@+id/waktuSelesai"
            android:layout_gravity="center_vertical"
            android:background="#D3F0D2"
            android:hint="Waktu Selesai"
            android:textColor="#000"
            android:textSize="22dp"
            android:editable="false"
            android:layout_below="@+id/textView7"
            android:layout_alignLeft="@+id/textView7"
            android:layout_alignStart="@+id/textView7" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Peralatan (jika butuh)"
            android:textSize="22dp"
            android:id="@+id/textView8"
            android:textColor="#ff000000"
            android:layout_below="@+id/waktuSelesai"
            android:layout_marginTop="4dp"
            android:layout_alignLeft="@+id/waktuSelesai"
            android:layout_alignStart="@+id/waktuSelesai" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:inputType="textMultiLine"
            android:textSize="22dp"
            android:id="@+id/peralatan"
            android:background="#D3F0D2"
            android:textColor="#000"
            android:layout_below="@+id/textView8"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <Button
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Submit"
            android:id="@+id/submit"
            android:background="#ff008688"
            android:textSize="20dp"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/peralatan"
            android:layout_centerHorizontal="true" />

    </RelativeLayout>

</ScrollView>
