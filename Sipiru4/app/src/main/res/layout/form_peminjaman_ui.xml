<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="wrap_content" android:gravity="center_horizontal"
    android:orientation="vertical" android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.c07ppl2015.sipiru.sipiru.LoginUI"
    android:background="#B1D9E7"
    android:id="@+id/layoutForm1">



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ruang   :"
            android:textSize="35dp"
            android:id="@+id/textView3"
            android:textColor="#ff000000"
            android:layout_marginTop="10dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <EditText
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:id="@+id/ruang"
            android:layout_gravity="center_vertical"
            android:background="#D3F0D2"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignBottom="@+id/textView3"
            android:layout_toRightOf="@+id/textView3"
            android:layout_toEndOf="@+id/textView3"
            android:layout_marginLeft="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nama      :"
            android:textSize="30dp"
            android:id="@+id/textView2"
            android:textColor="#ff000000"
            android:layout_below="@+id/textView3"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="10dp" />

        <EditText
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:id="@+id/nama"
            android:layout_gravity="center_vertical"
            android:background="#D3F0D2"
            android:layout_alignBottom="@+id/textView2"
            android:layout_alignLeft="@+id/ruang"
            android:layout_alignStart="@+id/ruang"
            android:layout_alignRight="@+id/ruang"
            android:layout_alignEnd="@+id/ruang"
            android:layout_marginTop="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NPM        :"
            android:textSize="30dp"
            android:id="@+id/textView4"
            android:textColor="#ff000000"
            android:layout_below="@+id/textView2"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="10dp" />

        <EditText
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:id="@+id/npm"
            android:layout_gravity="center_vertical"
            android:background="#D3F0D2"
            android:layout_alignTop="@+id/textView4"
            android:layout_alignLeft="@+id/nama"
            android:layout_alignStart="@+id/nama"
            android:layout_alignRight="@+id/nama"
            android:layout_alignEnd="@+id/nama" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Prihal      :"
            android:textSize="30dp"
            android:id="@+id/textView5"
            android:textColor="#ff000000"
            android:layout_below="@+id/textView4"
            android:layout_alignRight="@+id/textView4"
            android:layout_alignEnd="@+id/textView4"
            android:layout_marginTop="10dp" />

        <EditText
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:id="@+id/prihal"
            android:layout_gravity="center_vertical"
            android:background="#D3F0D2"
            android:layout_alignTop="@+id/textView5"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignBottom="@+id/textView5"
            android:layout_alignLeft="@+id/npm"
            android:layout_alignStart="@+id/npm" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tgl"
            android:textSize="30dp"
            android:id="@+id/textView6"
            android:textColor="#ff000000"
            android:layout_below="@+id/textView5"
            android:layout_alignLeft="@+id/textView5"
            android:layout_alignStart="@+id/textView5"
            android:layout_marginTop="10dp" />

        <EditText
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:id="@+id/tgl"
            android:layout_gravity="center_vertical"
            android:background="#D3F0D2"
            android:layout_below="@+id/prihal"
            android:layout_alignLeft="@+id/prihal"
            android:layout_alignStart="@+id/prihal"
            android:layout_alignRight="@+id/prihal"
            android:layout_alignEnd="@+id/prihal"
            android:layout_marginTop="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jam"
            android:textSize="30dp"
            android:id="@+id/textView7"
            android:textColor="#ff000000"
            android:layout_below="@+id/textView6"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="10dp" />

        <EditText
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:id="@+id/jam"
            android:layout_gravity="center_vertical"
            android:background="#D3F0D2"
            android:layout_alignTop="@+id/textView7"
            android:layout_alignRight="@+id/tgl"
            android:layout_alignEnd="@+id/tgl"
            android:layout_alignBottom="@+id/textView7"
            android:layout_alignLeft="@+id/tgl"
            android:layout_alignStart="@+id/tgl" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Permintaan Lain :"
            android:textSize="30dp"
            android:id="@+id/textView8"
            android:textColor="#ff000000"
            android:layout_below="@+id/textView7"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="40dp" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:ems="10"
            android:id="@+id/lain"
            android:background="#D3F0D2"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="false"
            android:layout_below="@+id/textView8" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Submit"
            android:id="@+id/btnTolak"
            android:layout_alignParentBottom="true"
            android:layout_alignLeft="@+id/textView6"
            android:layout_alignStart="@+id/textView6"
            android:layout_alignRight="@+id/jam"
            android:layout_alignEnd="@+id/jam"
            android:background="#ff83aae5"
            android:textSize="20dp" />


</RelativeLayout>
