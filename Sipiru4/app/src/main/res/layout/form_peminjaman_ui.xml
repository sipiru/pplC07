<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.c07ppl2015.sipiru.sipiru.LoginUI"
    android:id="@+id/ScrollView01"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/background">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"

        android:id="@+id/layoutForm1">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="FORMULIR"
            android:textSize="24dp"
            android:textStyle="bold"
            android:id="@+id/formulirText"
            android:textColor="@color/textblack"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Kode Ruangan"
            android:textSize="20dp"
            android:id="@+id/textView3"
            android:textColor="@color/textblack"
            android:layout_marginTop="15dp"
            android:layout_below="@+id/formulirText"
            android:layout_alignRight="@+id/textView4"
            android:layout_alignEnd="@+id/textView4" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ruang"
            android:hint="Kode ruangan"
            android:textSize="25dp"
            android:background="@color/field"
            android:layout_marginBottom="5dp"
            android:paddingLeft="5dp"
            android:layout_gravity="center_vertical"
            android:textColor="@color/textblack"
            android:editable="false"
            android:layout_below="@+id/textView3"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nama Peminjam"
            android:textSize="20dp"
            android:id="@+id/textView2"
            android:textColor="@color/textblack"
            android:layout_marginTop="4dp"
            android:layout_below="@+id/ruang"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/nama"
            android:layout_gravity="center_vertical"
            android:hint="Nama peminjam"
            android:paddingLeft="5dp"
            android:textSize="25dp"
            android:background="@color/field"
            android:layout_marginBottom="5dp"
            android:editable="false"
            android:layout_below="@+id/textView2"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Perihal*"
            android:textSize="20dp"
            android:id="@+id/textView4"
            android:textColor="@color/textblack"
            android:layout_marginTop="4dp"
            android:layout_below="@+id/nama"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/perihal"
            android:layout_gravity="center_vertical"
            android:dropDownSelector="@color/abc_primary_text_disable_only_material_dark"
            android:textSize="25dp"
            android:background="@color/field"
            android:layout_marginBottom="5dp"
            android:layout_below="@+id/textView4"
            android:layout_alignLeft="@+id/nama"
            android:layout_alignStart="@+id/nama"
            android:popupBackground="@color/popup" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Kegiatan*"
            android:textSize="20dp"
            android:id="@+id/textView5"
            android:textColor="@color/textblack"
            android:layout_marginTop="4dp"
            android:layout_below="@+id/perihal"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:id="@+id/kegiatan"
            android:lines="2"
            android:layout_gravity="center_vertical"
            android:gravity="top"
            android:hint="Nama kegiatan atau acara"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:textSize="25dp"
            android:background="@color/field"
            android:layout_marginBottom="5dp"
            android:textColor="@color/textblack"
            android:layout_below="@+id/textView5"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Waktu Mulai"
            android:textSize="20dp"
            android:id="@+id/textView6"
            android:textColor="@color/textblack"
            android:layout_marginTop="4dp"
            android:layout_below="@+id/kegiatan"
            android:layout_alignRight="@+id/textView4"
            android:layout_alignEnd="@+id/textView4" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/waktuMulai"
            android:layout_gravity="center_vertical"
            android:hint="Waktu Mulai"
            android:paddingLeft="5dp"
            android:editable="false"
            android:textColor="@color/textblack"
            android:textSize="25dp"
            android:background="@color/field"
            android:layout_marginBottom="5dp"
            android:layout_below="@+id/textView6"
            android:layout_alignLeft="@+id/textView6"
            android:layout_alignStart="@+id/textView6" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Waktu Selesai"
            android:textSize="20dp"
            android:id="@+id/textView7"
            android:textColor="@color/textblack"
            android:layout_marginTop="4dp"
            android:layout_below="@+id/waktuMulai"
            android:layout_alignLeft="@+id/waktuMulai"
            android:layout_alignStart="@+id/waktuMulai" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/waktuSelesai"
            android:layout_gravity="center_vertical"
            android:hint="Waktu Selesai"
            android:paddingLeft="5dp"
            android:textColor="@color/textblack"
            android:textSize="25dp"
            android:background="@color/field"
            android:layout_marginBottom="5dp"
            android:editable="false"
            android:layout_below="@+id/textView7"
            android:layout_alignLeft="@+id/textView7"
            android:layout_alignStart="@+id/textView7" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Peralatan (kosongkan jika tidak butuh)"
            android:textSize="20dp"
            android:id="@+id/textView8"
            android:textColor="@color/textblack"
            android:layout_below="@+id/waktuSelesai"
            android:layout_marginTop="4dp"
            android:layout_alignLeft="@+id/waktuSelesai"
            android:layout_alignStart="@+id/waktuSelesai" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:inputType="textMultiLine"
            android:textSize="25dp"
            android:background="@color/field"
            android:layout_marginBottom="5dp"
            android:id="@+id/peralatan"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:textColor="@color/textblack"
            android:layout_below="@+id/textView8"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:gravity="top"/>

        <Button
            android:layout_width="150dp"
            android:layout_height="55dp"
            android:text="Submit"
            android:id="@+id/submit"
            android:textSize="25dp"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/peralatan"
            android:layout_centerHorizontal="true"
            android:textAlignment="gravity" />

    </RelativeLayout>

</ScrollView>
