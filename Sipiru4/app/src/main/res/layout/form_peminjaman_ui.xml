<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.c07ppl2015.sipiru.sipiru.LoginUI"
    android:id="@+id/ScrollView01"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/background_gradient_color">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:id="@+id/layoutForm1">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="FORMULIR"
            android:textSize="@dimen/text_size1"
            android:textStyle="bold"
            android:id="@+id/formulirText"
            android:textColor="@color/text_color"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Kode Ruangan"
            android:textSize="@dimen/text_size_medium"
            android:id="@+id/textView3"
            android:textColor="@color/text_color"
            android:layout_marginTop="15dp"
            android:layout_below="@+id/formulirText"
            android:layout_alignRight="@+id/textView4"
            android:layout_alignEnd="@+id/textView4"
            android:paddingLeft="@dimen/text_padding" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ruang"
            android:hint="Kode ruangan"
            android:textSize="@dimen/text_size1"
            android:background="@drawable/edit_text"
            android:layout_marginBottom="@dimen/margin_bottom"
            android:layout_gravity="center_vertical"
            android:textColor="@color/text_color_field"
            android:editable="false"
            android:layout_below="@+id/textView3"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:padding="@dimen/text_padding" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nama Peminjam"
            android:textSize="@dimen/text_size_medium"
            android:id="@+id/textView2"
            android:textColor="@color/text_color"
            android:layout_below="@+id/ruang"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textIsSelectable="false"
            android:paddingLeft="@dimen/text_padding" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/nama"
            android:layout_gravity="center_vertical"
            android:hint="Nama peminjam"
            android:textSize="@dimen/text_size1"
            android:background="@drawable/edit_text"
            android:layout_marginBottom="@dimen/margin_bottom"
            android:editable="false"
            android:layout_below="@+id/textView2"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textColor="@color/text_color_field"
            android:padding="@dimen/text_padding" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Perihal*"
            android:textSize="@dimen/text_size_medium"
            android:id="@+id/textView4"
            android:textColor="@color/text_color"
            android:layout_below="@+id/nama"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:paddingLeft="@dimen/text_padding" />

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/perihal"
            android:layout_gravity="center_vertical"
            android:dropDownSelector="@color/abc_primary_text_disable_only_material_dark"
            android:textSize="25dp"
            android:background="@drawable/edit_text_background2"
            android:layout_marginBottom="@dimen/margin_bottom"
            android:layout_below="@+id/textView4"
            android:layout_alignLeft="@+id/nama"
            android:layout_alignStart="@+id/nama"
            android:popupBackground="@color/list_spiner"
            android:padding="@dimen/text_padding" />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/abc_spinner_mtrl_am_alpha"
            android:id="@+id/imageDropDown"
            android:layout_alignTop="@+id/perihal"
            android:layout_alignRight="@+id/perihal"
            android:layout_alignEnd="@+id/perihal" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Kegiatan*"
            android:textSize="@dimen/text_size_medium"
            android:id="@+id/textView5"
            android:textColor="@color/text_color"
            android:layout_below="@+id/perihal"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:paddingLeft="@dimen/text_padding" />

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:id="@+id/kegiatan"
            android:lines="2"
            android:layout_gravity="center_vertical"
            android:gravity="top"
            android:hint="Nama kegiatan atau acara"
            android:textSize="@dimen/text_size1"
            android:background="@drawable/edit_text_background2"
            android:layout_marginBottom="@dimen/margin_bottom"
            android:textColor="@color/text_color_field"
            android:layout_below="@+id/textView5"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:padding="@dimen/text_padding" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Waktu Mulai"
            android:textSize="@dimen/text_size_medium"
            android:id="@+id/textView6"
            android:textColor="@color/text_color"
            android:layout_below="@+id/kegiatan"
            android:layout_alignRight="@+id/textView4"
            android:layout_alignEnd="@+id/textView4"
            android:paddingLeft="@dimen/text_padding" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/waktuMulai"
            android:layout_gravity="center_vertical"
            android:hint="Waktu Mulai"
            android:paddingLeft="5dp"
            android:editable="false"
            android:textColor="@color/text_color_field"
            android:textSize="@dimen/text_size1"
            android:background="@drawable/edit_text"
            android:layout_marginBottom="@dimen/margin_bottom"
            android:layout_below="@+id/textView6"
            android:layout_alignLeft="@+id/textView6"
            android:layout_alignStart="@+id/textView6"
            android:padding="@dimen/text_padding" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Waktu Selesai"
            android:textSize="@dimen/text_size_medium"
            android:id="@+id/textView7"
            android:textColor="@color/text_color"
            android:layout_below="@+id/waktuMulai"
            android:layout_alignLeft="@+id/waktuMulai"
            android:layout_alignStart="@+id/waktuMulai"
            android:paddingLeft="@dimen/text_padding" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/waktuSelesai"
            android:layout_gravity="center_vertical"
            android:hint="Waktu Selesai"
            android:textColor="@color/text_color_field"
            android:textSize="@dimen/text_size1"
            android:background="@drawable/edit_text"
            android:layout_marginBottom="@dimen/margin_bottom"
            android:editable="false"
            android:layout_below="@+id/textView7"
            android:layout_alignLeft="@+id/textView7"
            android:layout_alignStart="@+id/textView7"
            android:padding="@dimen/text_padding" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Peralatan (kosongkan jika tidak butuh)"
            android:textSize="@dimen/text_size_medium"
            android:id="@+id/textView8"
            android:textColor="@color/text_color"
            android:layout_below="@+id/waktuSelesai"
            android:layout_alignLeft="@+id/waktuSelesai"
            android:layout_alignStart="@+id/waktuSelesai"
            android:paddingLeft="@dimen/text_padding" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:inputType="textMultiLine"
            android:textSize="@dimen/text_size1"
            android:background="@drawable/edit_text_background2"
            android:layout_marginBottom="@dimen/margin_bottom"
            android:id="@+id/peralatan"
            android:textColor="@color/text_color_field"
            android:layout_below="@+id/textView8"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:gravity="top"
            android:padding="@dimen/text_padding" />

        <Button
            android:layout_width="150dp"
            android:layout_height="55dp"
            android:text="Submit"
            android:id="@+id/submit"
            android:textSize="@dimen/text_size_medium"
            android:layout_marginTop="@dimen/margin_top_button"
            android:layout_below="@+id/peralatan"
            android:layout_centerHorizontal="true"
            android:textAlignment="gravity"
            android:background="@drawable/button_background"
            android:textColor="@color/text_color_button" />
    </RelativeLayout>

</ScrollView>
