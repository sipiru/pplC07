<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:gravity="center_horizontal"
    android:orientation="vertical" android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.c07ppl2015.sipiru.sipiru.LoginUI"
    android:background="#B1D9E7"
    android:id="@+id/layoutForm1">



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Role   :"
        android:textSize="30dp"
        android:id="@+id/tekRole"
        android:textColor="#ff000000"
        android:layout_marginTop="10dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Spinner
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:id="@+id/role"
        android:layout_gravity="center_vertical"
        android:background="#D3F0D2"
        android:textColor="#ff000000"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignBottom="@+id/tekRole"
        android:layout_toRightOf="@+id/tekRole"
        android:layout_toEndOf="@+id/tekRole"
        android:layout_marginLeft="10dp"
        android:entries="@array/role"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ID       :"
        android:textSize="30dp"
        android:id="@+id/tekID"
        android:textColor="#ff000000"
        android:layout_below="@+id/tekRole"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"
        android:layout_alignRight="@+id/tekID"
        android:layout_alignEnd="@+id/tekID" />

    <EditText
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:id="@+id/id"
        android:layout_gravity="center_vertical"
        android:background="#D3F0D2"
        android:textColor="#ff000000"
        android:layout_alignBottom="@+id/tekID"
        android:layout_alignRight="@+id/role"
        android:layout_alignEnd="@+id/role"
        android:layout_marginTop="10dp"
        android:layout_alignLeft="@+id/role"
        android:layout_alignStart="@+id/role" />




    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Update"
        android:id="@+id/btnUpdate"
        android:background="#ff008688"
        android:textSize="20dp"
        android:layout_below="@+id/tekID"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="60dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />



</RelativeLayout>