<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="com.c07ppl2015.sipiru.sipiru.LoginUI"
        android:background="#B1D9E7"
        android:id="@+id/layoutDecRuang1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kapasitas :"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:id="@+id/textView2"
                android:textColor="#ff000000"
                android:textSize="25dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fasilitas   :"
                android:id="@+id/textView3"
                android:textColor="#ff000000"
                android:textSize="25dp"
                android:layout_alignBottom="@+id/editIsiPesan"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignRight="@+id/editText1"
                android:layout_alignEnd="@+id/editText1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="15dp"
                android:id="@+id/kapasitas"
                android:layout_alignTop="@+id/textView2"
                android:layout_toRightOf="@+id/textView2"
                android:layout_alignBottom="@+id/textView2" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/fasilitas"
                android:layout_below="@+id/editText1"
                android:layout_alignLeft="@+id/editText1"
                android:layout_alignStart="@+id/editText1"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tersedia untuk jam :"
                android:id="@+id/textView4"
                android:textColor="#ff000000"
                android:textSize="25dp"
                android:layout_below="@+id/editText1"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="66dp" />

            <ListView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/listJam"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/textView4"
                android:longClickable="false"
                android:nestedScrollingEnabled="false"
                android:clickable="true"
                android:layout_alignParentBottom="false"
                android:background="#ff77e4e7" />



</RelativeLayout>




