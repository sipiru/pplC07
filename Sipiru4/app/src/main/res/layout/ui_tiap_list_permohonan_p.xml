<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="fill_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_daftarpermohonan"
        android:layout_gravity="center"
        android:id="@+id/kotak"
        android:elevation="5dp"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="8dp"/>

    <LinearLayout
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:weightSum="1"
        android:id="@+id/linearLayout">

    </LinearLayout>

    <TextView
        android:id="@+id/status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16dp"
        android:textColor="@color/textlist"
        android:text="mengungggu persetujuan"
        android:layout_below="@+id/perihal"
        android:layout_alignLeft="@+id/perihal"
        android:layout_alignStart="@+id/perihal"
        android:paddingBottom="4dp">
    </TextView>

    <TextView
        android:id="@+id/nama"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="22dp"
        android:textColor="@color/textlist"
        android:text="2302"
        android:layout_below="@+id/linearLayout"
        android:layout_marginLeft="18dp"
        android:layout_toRightOf="@+id/kotak"
        android:layout_toEndOf="@+id/kotak"
        android:paddingTop="4dp">
    </TextView>

    <TextView
        android:id="@+id/perihal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16dp"
        android:textColor="@color/textlist"
        android:text="Perihal : "
        android:layout_below="@+id/nama"
        android:layout_alignLeft="@+id/nama"
        android:layout_alignStart="@+id/nama">
    </TextView>

    <TextView
        android:id="@+id/deskripsi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16dp"
        android:textColor="@color/textlist"
        android:text="perihal apa"
        android:layout_alignTop="@+id/perihal"
        android:layout_toRightOf="@+id/perihal"
        android:layout_toEndOf="@+id/perihal">
    </TextView>

</RelativeLayout>