<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.c07ppl2015.sipiru.sipiru.LoginUI"
    android:paddingBottom="@dimen/activity_scrollview"
    android:layout_width="wrap_content"
    android:layout_height="fill_parent"
    android:gravity="center_horizontal"
    android:id="@+id/layoutScroll"
    android:background="@drawable/background_gradient_color"
    android:clickable="false"
    android:fillViewport="false">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="com.c07ppl2015.sipiru.sipiru.LoginUI"
        android:id="@+id/layoutCariRuang1">



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:weightSum="1"
            android:id="@+id/layoutCariRuang3"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Waktu mulai :"
                android:id="@+id/textView2"
                android:textSize="@dimen/text_size1"
                android:textColor="@color/text_color"
                android:layout_marginTop="@dimen/text_margin2"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="@dimen/edittext_hight"
                android:text="Tanggal Mulai"
                android:id="@+id/btnTglMulai"
                android:layout_gravity="left"
                android:textSize="@dimen/text_size_medium2"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/textView2"
                android:layout_marginTop="@dimen/text_margin2"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:background="@drawable/edit_text_background"
                android:textColor="@color/text_color_field"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="@dimen/edittext_hight"
                android:text="Tanggal Selesai"
                android:id="@+id/btnTglSelesai"
                android:layout_gravity="left"
                android:layout_marginTop="@dimen/text_margin2"
                android:textSize="@dimen/text_size_medium2"
                android:layout_below="@+id/textView4"
                android:background="@drawable/edit_text_background"
                android:textColor="@color/text_color_field"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Waktu selesai :"
                android:id="@+id/textView4"
                android:layout_marginTop="@dimen/text_margin"
                android:textSize="@dimen/text_size1"
                android:textColor="@color/text_color"
                android:layout_below="@+id/btnJamMulai"/>


            <Button
                android:layout_width="match_parent"
                android:layout_height="@dimen/edittext_hight"
                android:text="Waktu Mulai"
                android:id="@+id/btnJamMulai"
                android:textSize="@dimen/text_size_medium2"
                android:layout_marginTop="@dimen/margin_top"
                android:layout_gravity="left"
                android:layout_below="@+id/btnTglMulai"
                android:background="@drawable/edit_text_background"
                android:textColor="@color/text_color_field"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="@dimen/edittext_hight"
                android:text="Waktu Selesai"
                android:id="@+id/btnJamSelesai"
                android:layout_marginTop="@dimen/margin_top"
                android:textSize="@dimen/text_size_medium2"
                android:layout_gravity="left"
                android:layout_below="@+id/btnTglSelesai"
                android:background="@drawable/edit_text_background"
                android:textColor="@color/text_color_field"/>

            <ImageButton
                android:layout_width="@dimen/button_width2"
                android:layout_height="@dimen/button_hight"
                android:src="@android:drawable/ic_search_category_default"
                android:id="@+id/buttonCari"
                android:layout_marginTop="@dimen/margin_top_button"
                android:layout_below="@+id/btnJamSelesai"
                android:layout_centerHorizontal="true"
                android:clickable="true"
                android:adjustViewBounds="false"
                android:focusable="false"
                android:background="@drawable/button_background"/>
        </RelativeLayout>

    </RelativeLayout>
</ScrollView>
