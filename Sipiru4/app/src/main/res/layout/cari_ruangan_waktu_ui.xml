<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:gravity="center_horizontal"
    android:orientation="vertical" android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.c07ppl2015.sipiru.sipiru.LoginUI"
    android:background="#B1D9E7"
    android:id="@+id/layoutCariRuang1">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:weightSum="1"
        android:id="@+id/layoutCariRuang3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Masukan Tanggal :"
            android:id="@+id/textView2"
            android:textSize="30dp"
            android:textColor="#ff000000"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:id="@+id/TglMulai"
            android:layout_gravity="center_horizontal"
            android:background="#D3F0D2"
            android:layout_marginTop="10dp"
            android:textSize="30dp"
            android:hint="mulai" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:id="@+id/TglSelesai"
            android:background="#D3F0D2"
            android:layout_marginTop="10dp"
            android:hint="selesai"
            android:textSize="30dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Masukan Jam :"
            android:id="@+id/textView4"
            android:layout_marginTop="20dp"
            android:textSize="30dp"
            android:textColor="#ff000000" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:id="@+id/jamMulai"
            android:layout_gravity="center_horizontal"
            android:background="#D3F0D2"
            android:layout_marginTop="10dp"
            android:hint="mulai"
            android:textSize="30dp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:id="@+id/jamSelesai"
            android:background="#D3F0D2"
            android:layout_marginTop="10dp"
            android:hint="selesai"
            android:textSize="30dp" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cari"
            android:id="@+id/buttonCari"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_marginTop="20dp"
            android:background="#ff83aae5"
            android:textSize="30dp" />

    </LinearLayout>

</RelativeLayout>
