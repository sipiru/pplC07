<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.c07ppl2015.sipiru.sipiru.LoginUI"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:layout_width="wrap_content"
    android:layout_height="fill_parent"
    android:gravity="center_horizontal"
    android:id="@+id/layoutScroll"
    android:background="#B1D9E7">

    <RelativeLayout android:layout_width="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:background="#B1D9E7"
        android:id="@+id/layoutForm1">



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ruangan  "
            android:textSize="20dp"
            android:id="@+id/textView1"
            android:textColor="#ff000000"
            android:layout_marginTop="10dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ruang"
            android:hint="Nama ruangan"
            android:textSize="20dp"
            android:textColor="#ff000000"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignBottom="@+id/textView1"
            android:layout_toRightOf="@+id/textView1"
            android:layout_toEndOf="@+id/textView1"
            android:layout_marginLeft="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nama   "
            android:textSize="20dp"
            android:id="@+id/textView2"
            android:textColor="#ff000000"
            android:layout_below="@+id/textView1"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="10dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/nama"
            android:hint="Nama peminjam"
            android:textSize="20dp"
            android:textColor="#ff000000"
            android:layout_gravity="center_vertical"
            android:layout_alignBottom="@+id/textView2"
            android:layout_alignLeft="@+id/ruang"
            android:layout_alignStart="@+id/ruang"
            android:layout_alignRight="@+id/ruang"
            android:layout_alignEnd="@+id/ruang"
            android:layout_marginTop="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NPM     "
            android:textSize="20dp"
            android:id="@+id/textView4"
            android:textColor="#ff000000"
            android:layout_below="@+id/textView2"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="8dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/npm"
            android:hint="NPM peminjam"
            android:textSize="20dp"
            android:textColor="#ff000000"
            android:layout_gravity="center_vertical"
            android:layout_alignTop="@+id/textView4"
            android:layout_alignLeft="@+id/nama"
            android:layout_alignStart="@+id/nama"
            android:layout_alignRight="@+id/nama"
            android:layout_alignEnd="@+id/nama" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Perihal  "
            android:textSize="20dp"
            android:id="@+id/textView5"
            android:textColor="#ff000000"
            android:layout_below="@+id/textView4"
            android:layout_alignRight="@+id/textView4"
            android:layout_alignEnd="@+id/textView4"
            android:layout_marginTop="10dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/prihal"
            android:hint="Perihal"
            android:textSize="20dp"
            android:textColor="#ff000000"
            android:layout_gravity="center_vertical"
            android:layout_alignTop="@+id/textView5"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignBottom="@+id/textView5"
            android:layout_alignLeft="@+id/npm"
            android:layout_alignStart="@+id/npm" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tanggal "
            android:textSize="20dp"
            android:id="@+id/textView6"
            android:textColor="#ff000000"
            android:layout_below="@+id/textView5"
            android:layout_alignLeft="@+id/textView5"
            android:layout_alignStart="@+id/textView5"
            android:layout_marginTop="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tanggal"
            android:hint="Mulai"
            android:textSize="20dp"
            android:textColor="#ff000000"
            android:layout_marginRight="4dp"
            android:layout_gravity="center_vertical"
            android:textAlignment="center"
            android:layout_alignTop="@+id/textView6"
            android:layout_alignLeft="@+id/prihal"
            android:layout_alignStart="@+id/prihal"
            android:text="tanggal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jam    "
            android:textSize="20dp"
            android:id="@+id/textView7"
            android:textColor="#ff000000"
            android:layout_below="@+id/textView6"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/jam"
            android:hint="Mulai"
            android:textSize="20dp"
            android:textColor="#ff000000"
            android:layout_marginRight="4dp"
            android:layout_gravity="center_vertical"
            android:textAlignment="center"
            android:layout_above="@+id/textView8"
            android:layout_alignLeft="@+id/tanggal"
            android:layout_alignStart="@+id/tanggal"
            android:text="jam" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fasilitas Tambahan"
            android:textSize="20dp"
            android:id="@+id/textView8"
            android:textColor="#ff000000"
            android:layout_below="@+id/textView7"
            android:layout_marginTop="10dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:inputType="textMultiLine"
            android:ems="10"
            android:hint="Peralatan - peralatan"
            android:background="#D3F0D2"
            android:id="@+id/fasilitas"
            android:layout_below="@+id/textView8"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textColor="#ff000000"
            android:layout_alignRight="@+id/prihal"
            android:layout_alignEnd="@+id/prihal" />


        <Button
            android:layout_width="190dp"
            android:layout_height="40dp"
            android:text="Update Permintaan"
            android:id="@+id/btnUpdate"
            android:background="#ff008688"
            android:layout_marginTop="6dp"
            android:textSize="16dp"
            android:layout_below="@+id/fasilitas"
            android:layout_centerHorizontal="true" />

        <Button
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:text="setuju"
            android:id="@+id/btnSetuju"
            android:background="#ff008688"
            android:textSize="16dp"
            android:layout_marginRight="20dp"
            android:layout_alignParentBottom="true"
            android:layout_alignRight="@+id/fasilitas"
            android:layout_alignEnd="@+id/fasilitas" />

        <Button
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:text="Tolak"
            android:id="@+id/btnTolak"
            android:background="#ff008688"
            android:textSize="16dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_below="@+id/btnUpdate"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

    </RelativeLayout>
</ScrollView>