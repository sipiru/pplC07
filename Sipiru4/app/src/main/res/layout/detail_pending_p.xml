<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.c07ppl2015.sipiru.sipiru.LoginUI"
    android:id="@+id/ScrollView01"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="false"
    android:background="@drawable/background_gradient_color">


<!-- Framelayout to display Fragments -->
    <FrameLayout
        android:id="@+id/frame_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout  android:layout_width="match_parent"
            android:layout_height="match_parent" android:gravity="center_horizontal"
            android:orientation="vertical" android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:scrollbars="horizontal"
            android:id="@+id/layoutForm1">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=" Ruangan"
                android:textColor="@color/text_color"
                android:textSize="20dp"
                android:id="@+id/textView3"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/ruang"
                android:layout_gravity="center_vertical"
                android:hint="Nama ruangan"
                android:textSize="25dp"
                android:background="@drawable/edit_text"
                android:layout_marginBottom="5dp"
                android:paddingLeft="5dp"
                android:textColor="@color/text_color_field"
                android:layout_below="@+id/textView3"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=" Nama"
                android:textSize="20dp"
                android:id="@+id/textView2"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/ruang"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="4dp"
                android:textColor="@color/text_color" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/nama"
                android:layout_gravity="center_vertical"
                android:hint="Nama peminjam"
                android:textSize="25dp"
                android:background="@drawable/edit_text"
                android:layout_marginBottom="5dp"
                android:paddingLeft="5dp"
                android:textColor="@color/text_color_field"
                android:layout_below="@+id/textView2"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=" Username"
                android:textSize="20dp"
                android:id="@+id/textView4"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/nama"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="4dp"
                android:textColor="@color/text_color" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/username"
                android:layout_gravity="center_vertical"
                android:hint="Username"
                android:textSize="25dp"
                android:background="@drawable/edit_text"
                android:layout_marginBottom="5dp"
                android:paddingLeft="5dp"
                android:textColor="@color/text_color_field"
                android:layout_below="@+id/textView4"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=" Perihal"
                android:textSize="20dp"
                android:id="@+id/textView5"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/username"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="4dp"
                android:textColor="@color/text_color" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/prihal"
                android:layout_gravity="center_vertical"
                android:hint="Perihal"
                android:textSize="25dp"
                android:background="@drawable/edit_text"
                android:layout_marginBottom="5dp"
                android:paddingLeft="5dp"
                android:textColor="@color/text_color_field"
                android:layout_below="@+id/textView5"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:autoText="false" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=" Kegiatan"
                android:textSize="20dp"
                android:id="@+id/textView6"
                android:layout_below="@+id/prihal"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="4dp"
                android:textColor="@color/text_color" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/kegiatan"
                android:layout_gravity="center_vertical"
                android:hint="Kegiatan"
                android:textSize="25dp"
                android:background="@drawable/edit_text"
                android:layout_marginBottom="5dp"
                android:paddingLeft="5dp"
                android:textColor="@color/text_color_field"
                android:layout_below="@+id/textView6"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=" Waktu Mulai"
                android:textSize="20dp"
                android:id="@+id/textView7"
                android:layout_marginTop="4dp"
                android:layout_below="@+id/kegiatan"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:textColor="@color/text_color" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/waktuMulai"
                android:layout_gravity="center_vertical"
                android:hint="Mulai"
                android:textSize="25dp"
                android:background="@drawable/edit_text"
                android:layout_marginBottom="5dp"
                android:paddingLeft="5dp"
                android:textColor="@color/text_color_field"
                android:layout_below="@+id/textView7"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=" Waktu Selesai"
                android:textSize="20dp"
                android:id="@+id/textView8"
                android:layout_below="@+id/waktuMulai"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="4dp"
                android:textColor="@color/text_color" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/waktuSelesai"
                android:layout_gravity="center_vertical"
                android:hint="Selesai"
                android:textSize="25dp"
                android:background="@drawable/edit_text"
                android:layout_marginBottom="5dp"
                android:paddingLeft="5dp"
                android:textColor="@color/text_color_field"
                android:layout_below="@+id/textView8"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=" Peralatan "
                android:textSize="20dp"
                android:id="@+id/textView9"
                android:layout_below="@+id/waktuSelesai"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="4dp"
                android:textColor="@color/text_color" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="25dp"
                android:background="@drawable/edit_text"
                android:layout_marginBottom="5dp"
                android:paddingLeft="5dp"
                android:textColor="@color/text_color_field"
                android:id="@+id/permintaanlain"
                android:layout_below="@+id/textView9"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_below="@+id/permintaanlain"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/text_margin2">

                <Button
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:text="Kirim pesan"
                    android:id="@+id/kirimPesan"
                    android:textSize="@dimen/text_size2"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginRight="@dimen/margin_right"
                    android:background="@drawable/button_background"
                    android:textColor="@color/text_color_button"/>

                <Button
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:text="Batal"
                    android:id="@+id/batal"
                    android:textSize="@dimen/text_size2"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginLeft="@dimen/margin_right"
                    android:background="@drawable/button_background"
                    android:textColor="@color/text_color_button"/>

            </RelativeLayout>

        </RelativeLayout>

    </FrameLayout>



</ScrollView>

