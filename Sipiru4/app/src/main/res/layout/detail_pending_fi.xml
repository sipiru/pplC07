<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ScrollView01"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#4d4d7ed0">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="match_parent" android:gravity="center_horizontal"
        android:orientation="vertical" android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:scrollbars="horizontal"
        tools:context="com.c07ppl2015.sipiru.sipiru.LoginUI"
        android:id="@+id/layoutForm1">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ff008688"
            android:text=" Ruangan"
            android:textSize="20dp"
            android:id="@+id/textView3"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ruang"
            android:layout_gravity="center_vertical"
            android:hint="Nama ruangan"
            android:textSize="20dp"
            android:textColor="#424242"
            android:layout_below="@+id/textView3"
            android:layout_alignParentLeft="true" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ff008688"
            android:text=" Nama"
            android:textSize="20dp"
            android:id="@+id/textView2"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/ruang"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="4dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/nama"
            android:layout_gravity="center_vertical"
            android:hint="Nama peminjam"
            android:textSize="20dp"
            android:textColor="#424242"
            android:layout_below="@+id/textView2"
            android:layout_alignParentLeft="true" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ff008688"
            android:text=" Username"
            android:textSize="20dp"
            android:id="@+id/textView4"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/nama"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="4dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/username"
            android:layout_gravity="center_vertical"
            android:hint="Username"
            android:textSize="20dp"
            android:textColor="#424242"
            android:layout_below="@+id/textView4"
            android:layout_alignParentLeft="true" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ff008688"
            android:text=" Perihal"
            android:textSize="20dp"
            android:id="@+id/textView5"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/username"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="4dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/prihal"
            android:layout_gravity="center_vertical"
            android:hint="Perihal"
            android:textSize="20dp"
            android:textColor="#424242"
            android:layout_below="@+id/textView5"
            android:layout_alignParentLeft="true" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ff008688"
            android:text=" Kegiatan"
            android:textSize="20dp"
            android:id="@+id/textView6"
            android:layout_below="@+id/prihal"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="4dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/kegiatan"
            android:layout_gravity="center_vertical"
            android:hint="Kegiatan"
            android:textSize="20dp"
            android:textColor="#424242"
            android:layout_below="@+id/textView6"
            android:layout_alignParentLeft="true" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ff008688"
            android:text=" Waktu Mulai"
            android:textSize="20dp"
            android:id="@+id/textView7"
            android:layout_marginTop="4dp"
            android:layout_below="@+id/kegiatan"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/waktuMulai"
            android:layout_gravity="center_vertical"
            android:hint="Mulai"
            android:textSize="20dp"
            android:textColor="#424242"
            android:layout_below="@+id/textView7"
            android:layout_alignParentLeft="true" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ff008688"
            android:text=" Waktu Selesai"
            android:textSize="20dp"
            android:id="@+id/textView8"
            android:layout_below="@+id/waktuMulai"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="4dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/waktuSelesai"
            android:layout_gravity="center_vertical"
            android:hint="Selesai"
            android:textSize="20dp"
            android:textColor="#424242"
            android:layout_below="@+id/textView8"
            android:layout_alignParentLeft="true" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ff008688"
            android:text=" Peralatan "
            android:textSize="20dp"
            android:id="@+id/textView9"
            android:layout_below="@+id/waktuSelesai"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="4dp"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:hint="Peralatan-peralatan"
            android:textSize="20dp"
            android:textColor="#424242"
            android:id="@+id/peralatan"
            android:background="#D3F0D2"
            android:layout_below="@+id/textView9"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <Button
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:text="Update Peralatan"
            android:id="@+id/btnUpdate"
            android:background="#ff546498"
            android:textSize="16dp"
            android:layout_below="@+id/peralatan"
            android:layout_centerHorizontal="true"/>

        <Button
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:text="Setuju"
            android:id="@+id/btnSetuju"
            android:background="#ff008688"
            android:textSize="16dp"
            android:layout_marginRight="44dp"
            android:layout_marginEnd="44dp"
            android:layout_marginTop="20dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <Button
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:text="Tolak"
            android:id="@+id/btnTolak"
            android:background="#ff008688"
            android:textSize="16dp"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/btnUpdate"
            android:layout_alignRight="@+id/ruang"
            android:layout_alignEnd="@+id/ruang" />
    </RelativeLayout>
</ScrollView>