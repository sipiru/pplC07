<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.c07ppl2015.sipiru.sipiru.LoginUI"
    android:id="@+id/ScrollView01"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_gradient_color">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:scrollbars="horizontal"
        android:id="@+id/layoutForm1">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ruangan"
            android:textSize="@dimen/text_size_medium"
            android:id="@+id/textView3"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textColor="@color/text_color"
            android:paddingLeft="@dimen/text_padding" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ruang"
            android:layout_gravity="center_vertical"
            android:hint="Nama ruangan"
            android:textSize="@dimen/text_size1"
            android:textColor="@color/text_color_field"
            android:layout_below="@+id/textView3"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="false"
            android:background="@drawable/edit_text"
            android:layout_marginBottom="@dimen/margin_bottom"
            android:padding="@dimen/text_padding" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nama"
            android:textSize="@dimen/text_size_medium"
            android:id="@+id/textView2"
            android:layout_alignParentStart="false"
            android:layout_below="@+id/ruang"
            android:layout_alignParentLeft="true"
            android:textColor="@color/text_color"
            android:paddingLeft="@dimen/text_padding" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/nama"
            android:layout_gravity="center_vertical"
            android:hint="Nama peminjam"
            android:textSize="@dimen/text_size1"
            android:textColor="@color/text_color_field"
            android:layout_below="@+id/textView2"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="false"
            android:background="@drawable/edit_text"
            android:layout_marginBottom="@dimen/margin_bottom"
            android:padding="@dimen/text_padding" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Username"
            android:textSize="@dimen/text_size_medium"
            android:id="@+id/textView4"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/nama"
            android:layout_alignParentLeft="true"
            android:textColor="@color/text_color"
            android:paddingLeft="@dimen/text_padding" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/username"
            android:layout_gravity="center_vertical"
            android:hint="Username"
            android:textSize="@dimen/text_size1"
            android:textColor="@color/text_color_field"
            android:layout_below="@+id/textView4"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:background="@drawable/edit_text"
            android:layout_marginBottom="@dimen/margin_bottom"
            android:padding="@dimen/text_padding" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Perihal"
            android:textSize="@dimen/text_size_medium"
            android:id="@+id/textView5"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/username"
            android:layout_alignParentLeft="true"
            android:textColor="@color/text_color"
            android:paddingLeft="@dimen/text_padding" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/prihal"
            android:layout_gravity="center_vertical"
            android:hint="Perihal"
            android:textSize="@dimen/text_size1"
            android:textColor="@color/text_color_field"
            android:layout_below="@+id/textView5"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:background="@drawable/edit_text"
            android:layout_marginBottom="@dimen/margin_bottom"
            android:padding="@dimen/text_padding" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Kegiatan"
            android:textSize="@dimen/text_size_medium"
            android:id="@+id/textView6"
            android:layout_below="@+id/prihal"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textColor="@color/text_color"
            android:paddingLeft="@dimen/text_padding" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/kegiatan"
            android:layout_gravity="center_vertical"
            android:hint="Kegiatan"
            android:textSize="@dimen/text_size1"
            android:textColor="@color/text_color_field"
            android:layout_below="@+id/textView6"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:background="@drawable/edit_text"
            android:layout_marginBottom="@dimen/margin_bottom"
            android:padding="@dimen/text_padding" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Waktu Mulai"
            android:textSize="@dimen/text_size_medium"
            android:id="@+id/textView7"
            android:layout_below="@+id/kegiatan"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textColor="@color/text_color"
            android:paddingLeft="@dimen/text_padding" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/waktuMulai"
            android:layout_gravity="center_vertical"
            android:hint="Mulai"
            android:textSize="@dimen/text_size1"
            android:textColor="@color/text_color_field"
            android:layout_below="@+id/textView7"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:background="@drawable/edit_text"
            android:layout_marginBottom="@dimen/margin_bottom"
            android:padding="@dimen/text_padding" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Waktu Selesai"
            android:textSize="@dimen/text_size_medium"
            android:id="@+id/textView8"
            android:layout_below="@+id/waktuMulai"
            android:layout_alignParentLeft="true"
            android:textColor="@color/text_color"
            android:paddingLeft="@dimen/text_padding" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/waktuSelesai"
            android:layout_gravity="center_vertical"
            android:hint="Selesai"
            android:textSize="@dimen/text_size1"
            android:textColor="@color/text_color_field"
            android:layout_below="@+id/textView8"
            android:layout_alignParentLeft="true"
            android:background="@drawable/edit_text"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="@dimen/margin_bottom"
            android:padding="@dimen/text_padding" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Peralatan "
            android:textSize="@dimen/text_size_medium"
            android:id="@+id/textView9"
            android:layout_below="@+id/waktuSelesai"
            android:layout_alignParentLeft="true"
            android:textColor="@color/text_color"
            android:paddingLeft="@dimen/text_padding" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size1"
            android:textColor="@color/text_color_field"
            android:id="@+id/peralatan"
            android:background="@drawable/edit_text_background"
            android:layout_below="@+id/textView9"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="@dimen/margin_bottom"
            android:padding="@dimen/text_padding" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_below="@+id/btnUpdate"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="@dimen/margin_top_button">

            <Button
                android:layout_width="@dimen/button_width2"
                android:layout_height="@dimen/button_hight"
                android:text="Tolak"
                android:id="@+id/btnTolak"
                android:textSize="@dimen/text_size_medium"
                android:layout_marginLeft="30dp"
                android:textColor="@color/text_color_button"
                android:background="@drawable/button_background"/>

            <Button
                android:layout_width="@dimen/button_width2"
                android:layout_height="@dimen/button_hight"
                android:text="Setuju"
                android:id="@+id/btnSetuju"
                android:textSize="@dimen/text_size_medium"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="false"
                android:layout_marginRight="30dp"
                android:textColor="@color/text_color_button"
                android:background="@drawable/button_background"/>


        </RelativeLayout>
        <Button
            android:layout_width="@dimen/button_width"
            android:layout_height="@dimen/button_hight"
            android:text="Update Peralatan"
            android:id="@+id/btnUpdate"
            android:background="@drawable/button_background"
            android:textSize="@dimen/text_size_medium"
            android:layout_below="@+id/peralatan"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/margin_top_button"
            android:textColor="@color/text_color_button" />





    </RelativeLayout>
</ScrollView>