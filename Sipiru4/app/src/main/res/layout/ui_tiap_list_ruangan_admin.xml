<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="fill_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/nama"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_size1"
        android:lines="1"
        android:textColor="@color/textlist"
        android:text="2302"
        android:layout_below="@+id/linearLayout"
        android:layout_marginLeft="@dimen/text_margin"
        android:paddingTop="@dimen/text_padding">
    </TextView>

    <TextView
        android:id="@+id/kodeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_size2"
        android:textColor="@color/textlist"
        android:text="kode : "
        android:layout_below="@+id/nama"
        android:layout_alignLeft="@+id/nama"
        android:layout_alignStart="@+id/nama">
    </TextView>

    <TextView
        android:id="@+id/kode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_size2"
        android:textColor="@color/textlist"
        android:text="R2302"
        android:layout_alignTop="@+id/kodeText"
        android:layout_toRightOf="@+id/kodeText"
        android:layout_toEndOf="@+id/kodeText">
    </TextView>

    <TextView
        android:id="@+id/kapasitasText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_size2"
        android:textColor="@color/textlist"
        android:text="kapasitas : "
        android:layout_below="@+id/kodeText"
        android:layout_alignLeft="@+id/kodeText"
        android:layout_alignStart="@+id/kodeText"
        android:paddingBottom="@dimen/text_padding">
    </TextView>

    <TextView
        android:id="@+id/kapasitas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_size2"
        android:textColor="@color/textlist"
        android:text="99"
        android:paddingBottom="@dimen/text_padding"
        android:layout_alignTop="@+id/kapasitasText"
        android:layout_toRightOf="@+id/kapasitasText"
        android:layout_toEndOf="@+id/kapasitasText">
    </TextView>

    <Button
        android:id="@+id/btnHapus"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:text="Hapus"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textColor="@color/textlist"
        android:layout_marginRight="@dimen/button_margin">
    </Button>

</RelativeLayout>