<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ScrollView01"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/background_gradient_color">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="wrap_content" android:gravity="center_horizontal"
        android:orientation="vertical" android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="com.c07ppl2015.sipiru.sipiru.LoginUI"
        android:id="@+id/layoutForm1">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Menambah Ruangan"
            android:textSize="24dp"
            android:textStyle="bold"
            android:id="@+id/textHeader"
            android:textColor="@color/text_color"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="20dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Kode Ruangan*"
            android:textSize="20dp"
            android:id="@+id/textView3"
            android:textColor="@color/text_color"
            android:layout_marginTop="8dp"
            android:layout_alignRight="@+id/textView4"
            android:layout_alignEnd="@+id/textView4"
            android:layout_below="@+id/textHeader" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:id="@+id/ruang"
            android:hint="Kode ruangan"
            android:paddingLeft="5dp"
            android:textSize="25dp"
            android:layout_gravity="center_vertical"
            android:textColor="@color/text_color_field"
            android:background="@drawable/edit_text_background"
            android:editable="false"
            android:layout_below="@+id/textView3"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="5dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nama Ruangan"
            android:textSize="20dp"
            android:id="@+id/textView2"
            android:textColor="@color/text_color"
            android:layout_marginTop="4dp"
            android:layout_below="@+id/ruang"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:id="@+id/namaRuangan"
            android:layout_gravity="center_vertical"
            android:background="@drawable/edit_text_background"
            android:hint="Nama ruangan"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:textColor="@color/text_color_field"
            android:editable="false"
            android:textSize="25dp"
            android:layout_below="@+id/textView2"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="5dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="kapasitas"
            android:textSize="22dp"
            android:id="@+id/textView5"
            android:textColor="@color/text_color"
            android:layout_marginTop="4dp"
            android:layout_below="@+id/namaRuangan"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/kapasitas"
            android:layout_gravity="center_vertical"
            android:background="@drawable/edit_text_background"
            android:hint="Nama kegiatan atau acara"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:textSize="25dp"
            android:textColor="@color/text_color_field"
            android:layout_below="@+id/textView5"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="5dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Deskripsi (kosongkan jika tidak perlu)"
            android:textSize="20dp"
            android:id="@+id/textView8"
            android:textColor="@color/text_color"
            android:layout_below="@+id/kapasitas"
            android:layout_marginTop="4dp"
            android:layout_alignLeft="@+id/waktuSelesai"
            android:layout_alignStart="@+id/waktuSelesai" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:inputType="textMultiLine"
            android:textSize="22dp"
            android:id="@+id/deskripsi"
            android:background="@drawable/edit_text_background"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:textColor="@color/text_color_field"
            android:layout_below="@+id/textView8"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="5dp" />

        <Button
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Update"
            android:id="@+id/tambah"
            android:background="@drawable/button_background"
            android:textSize="20dp"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/deskripsi"
            android:layout_centerHorizontal="true"
            android:textColor="@color/text_color_button"/>

    </RelativeLayout>

</ScrollView>
