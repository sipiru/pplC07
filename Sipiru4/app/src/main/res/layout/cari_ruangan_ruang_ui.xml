<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:gravity="center_horizontal"
    android:orientation="vertical" android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.c07ppl2015.sipiru.sipiru.LoginUI"
    android:background="#B1D9E7"
    android:id="@+id/layoutCariRuang1">



    <Spinner
        android:layout_width="wrap_content" android:layout_height="50dp"
        android:id="@+id/editView1" android:layout_gravity="center_horizontal"
        android:background="#D3F0D2"
        android:layout_below="@+id/layoutDftPeminjaman2" android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" android:layout_toLeftOf="@+id/btnsearch"
        android:layout_toStartOf="@+id/btnsearch" />

    <ImageButton android:layout_width="50dp" android:layout_height="50dp"
        android:id="@+id/btnsearch" android:layout_gravity="center_horizontal"
        android:src="@drawable/ic_cariruangan" android:background="#ffd3f0d2"
        android:layout_alignTop="@+id/editView1" android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <CalendarView android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:id="@+id/calendarView"
        android:layout_alignParentBottom="true" android:layout_alignRight="@+id/btnsearch"
        android:layout_alignEnd="@+id/btnsearch" android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" android:background="#ff77e4e7"
        android:layout_below="@+id/editView1"
        android:layout_marginTop="10dp" />

</RelativeLayout>
