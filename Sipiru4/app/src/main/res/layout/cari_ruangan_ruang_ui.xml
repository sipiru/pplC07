<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="${packageName}.${activityClass}"
    android:background="@drawable/background_gradient_color">

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:popupBackground="@color/list_spiner"
        android:layout_alignBottom="@+id/search"
        android:layout_alignParentTop="true"
        android:layout_marginTop="@dimen/margin_top"
        android:background="@drawable/edit_text_background"
        android:layout_toLeftOf="@+id/search"
        android:layout_toStartOf="@+id/search"
        android:layout_marginLeft="@dimen/text_padding"
        android:layout_marginRight="@dimen/divider" />

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/abc_spinner_mtrl_am_alpha"
        android:id="@+id/imageDropDown"
        android:layout_alignRight="@+id/spinner"
        android:layout_alignEnd="@+id/spinner"
        android:layout_alignBottom="@+id/spinner"
        android:layout_alignTop="@+id/spinner" />

    <ImageButton
        android:layout_width="60dp"
        android:layout_height="55dp"
        android:src="@android:drawable/ic_search_category_default"
        android:id="@+id/search"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:clickable="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="@dimen/margin_top"
        android:background="@drawable/button_background"
        android:layout_marginRight="@dimen/text_padding"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:text=" tidak tersedia pada :"
        android:textSize="@dimen/text_size_medium"
        android:textColor="@color/text_color"
        android:layout_below="@+id/spinner"
        android:layout_toRightOf="@+id/namaRuangan"
        android:layout_toEndOf="@+id/namaRuangan" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/namaRuangan"
        android:textColor="@color/text_color"
        android:textSize="@dimen/text_size_medium"
        android:layout_alignTop="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="@dimen/margin_left" />

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal"
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1"
        android:layout_below="@+id/namaRuangan">

        <TextView xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/mulai"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:padding="@dimen/text_margin2"
            android:textSize="@dimen/text_size2"
            android:text="waktu mulai"
            android:textColor="@color/text_color"
            android:layout_marginLeft="@dimen/text_margin2"
            android:layout_weight="0.44">
        </TextView>

        <TextView xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/selesai"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:padding="@dimen/text_margin2"
            android:textSize="@dimen/text_size2"
            android:text="waktu selesai"
            android:textColor="@color/text_color"
            android:layout_marginLeft="@dimen/text_margin2"
            android:layout_weight="0.44">
        </TextView>
    </LinearLayout>

    <ListView
        android:id="@+id/listView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/linearLayout"
        android:layout_marginTop="@dimen/margin_top"
        android:background="@drawable/background_gradient_color"
        android:divider="@color/list_divider"
        android:dividerHeight="@dimen/divider"
        android:clickable="true"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:layout_alignBottom="@+id/spinner"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>

</RelativeLayout>