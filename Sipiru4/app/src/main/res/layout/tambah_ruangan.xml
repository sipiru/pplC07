<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ScrollView01"
    android:gravity="center_horizontal"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#4d4d7ed0">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="http://schemas.android.com/tools">

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
            android:layout_height="match_parent" android:gravity="center_horizontal"
            android:orientation="vertical" android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:scrollbars="horizontal"
            tools:context="com.c07ppl2015.sipiru.sipiru.LoginUI"
            android:id="@+id/layoutForm1">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Menambah Ruangan"
                android:id="@+id/textHeader"
                android:textSize="26dp"
                android:layout_marginBottom="20dp"
                android:gravity="center_horizontal" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#b74d7ed0"
                android:text=" Kode ruangan (format : R2330)"
                android:id="@+id/textView"
                android:textSize="22dp"
                android:layout_below="@id/textHeader"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/kodeRuangan"
                android:lines="1"
                android:hint="kode ruangan"
                android:inputType="textCapCharacters"
                android:textColor="#424242"
                android:textSize="22dp"
                android:editable="true"
                android:layout_below="@+id/textView"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#b74d7ed0"
                android:text=" Nama"
                android:id="@+id/textView1"
                android:textSize="22dp"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/kodeRuangan"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/namaRuangan"
                android:hint="nama ruangan"
                android:textColor="#424242"
                android:lines="1"
                android:editable="true"
                android:textSize="22dp"
                android:layout_below="@+id/textView1"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#b74d7ed0"
                android:text=" Kapasitas "
                android:id="@+id/textView2"
                android:textSize="22dp"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/namaRuangan"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#b74d7ed0"
                android:text=" Deskripsi (boleh kosong)"
                android:id="@+id/textView3"
                android:textSize="22dp"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/kapasitas"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/kapasitas"
                android:hint="kapasitas"
                android:lines="1"
                android:textColor="#424242"
                android:textSize="22dp"
                android:editable="true"
                android:inputType="numberSigned"
                android:layout_below="@+id/textView2"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/deskripsi"
                android:hint="deskripsi"
                android:lines="2"
                android:textColor="#424242"
                android:textSize="22dp"
                android:editable="true"
                android:layout_below="@+id/textView3"
                android:layout_alignLeft="@+id/textView3"
                android:layout_alignStart="@+id/textView3"
                android:gravity="top" />

            <Button
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="Tambah Ruangan"
                android:id="@+id/buttonAdd"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_below="@id/deskripsi" />

        </RelativeLayout>
    </RelativeLayout>
</ScrollView>
