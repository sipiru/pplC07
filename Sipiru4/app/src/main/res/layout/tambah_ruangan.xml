<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.c07ppl2015.sipiru.sipiru.LoginUI"
    android:id="@+id/ScrollView01"
    android:gravity="center_horizontal"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/background_gradient_color">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:scrollbars="horizontal"

        android:id="@+id/layoutForm1">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Kode ruangan (format : R2330)"
            android:id="@+id/textView"
            android:textSize="@dimen/text_size_medium"
            android:textColor="@color/text_color"
            android:paddingLeft="@dimen/text_padding"
            android:layout_marginTop="@dimen/margin_top" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/kodeRuangan"
            android:lines="1"
            android:hint="kode ruangan"
            android:inputType="textCapCharacters"
            android:textColor="@color/text_color_field"
            android:textSize="@dimen/text_size_medium"
            android:editable="true"
            android:layout_below="@+id/textView"
            android:background="@drawable/edit_text_background2"
            android:layout_marginBottom="@dimen/margin_bottom"
            android:padding="@dimen/text_padding" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nama"
            android:id="@+id/textView1"
            android:textSize="@dimen/text_size_medium"
            android:layout_below="@+id/kodeRuangan"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textColor="@color/text_color"
            android:paddingLeft="@dimen/text_padding" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/namaRuangan"
            android:hint="nama ruangan"
            android:textColor="@color/text_color_field"
            android:lines="1"
            android:editable="true"
            android:textSize="@dimen/text_size1"
            android:layout_below="@+id/textView1"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:background="@drawable/edit_text_background2"
            android:layout_marginBottom="@dimen/margin_bottom"
            android:padding="@dimen/text_padding" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Kapasitas "
            android:id="@+id/textView2"
            android:textSize="@dimen/text_size_medium"
            android:layout_below="@+id/namaRuangan"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textColor="@color/text_color"
            android:paddingLeft="@dimen/text_padding" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Deskripsi (boleh kosong)"
            android:id="@+id/textView3"
            android:textSize="@dimen/text_size_medium"
            android:layout_below="@+id/kapasitas"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textColor="@color/text_color"
            android:paddingLeft="@dimen/text_padding" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/kapasitas"
            android:hint="kapasitas"
            android:lines="1"
            android:textColor="@color/text_color_field"
            android:textSize="@dimen/text_size1"
            android:editable="true"
            android:inputType="number"
            android:layout_below="@+id/textView2"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:background="@drawable/edit_text_background2"
            android:layout_marginBottom="@dimen/margin_bottom"
            android:padding="@dimen/text_padding" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/deskripsi"
            android:hint="deskripsi"
            android:lines="2"
            android:textColor="@color/text_color_field"
            android:textSize="@dimen/text_size1"
            android:editable="true"
            android:layout_below="@+id/textView3"
            android:layout_alignLeft="@+id/textView3"
            android:layout_alignStart="@+id/textView3"
            android:gravity="top"
            android:background="@drawable/edit_text_background2"
            android:layout_marginBottom="@dimen/margin_bottom"
            android:padding="@dimen/text_padding" />

        <Button
            android:layout_width="@dimen/button_width"
            android:layout_height="@dimen/button_hight"
            android:text="Tambah Ruangan"
            android:id="@+id/buttonAdd"
            android:layout_below="@+id/deskripsi"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/margin_top_button"
            android:background="@drawable/button_background"
            android:textColor="@color/text_color_button" />

    </RelativeLayout>
</ScrollView>
